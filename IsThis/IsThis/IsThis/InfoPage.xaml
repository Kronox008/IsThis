<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsThis.InfoPage">
    <ContentPage.Content>
        <Grid Margin="10"
              RowSpacing="10">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                
            </Grid.RowDefinitions>
            <Label x:Name="TitleLabel_1" Grid.Row="0" Grid.Column="0" FontSize="Large"></Label>
            <Label x:Name="GameLabel_1" Grid.Row="1" Grid.Column="0" FontSize="Medium"></Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>